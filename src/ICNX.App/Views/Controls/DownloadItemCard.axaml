<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ICNX.App.ViewModels"
             x:Class="ICNX.App.Views.Controls.DownloadItemCard"
             x:DataType="vm:DownloadItemViewModel">

    <Border Background="{DynamicResource SurfaceGlassBrush}" 
            BorderBrush="{DynamicResource BorderDefaultBrush}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="16"
            Margin="0,0,0,12">
        
        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
            
            <!-- File Name and Status Row -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2" ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,8">
                
                <!-- File Icon and Name -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <!-- File Type Icon -->
                    <Border Background="#FF374151" 
                            CornerRadius="8" 
                            Width="40" 
                            Height="40" 
                            VerticalAlignment="Top">
                        <TextBlock Text="ðŸ“„" 
                                   FontSize="16" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Spacing="4">
                        <!-- File Name -->
                        <TextBlock Text="{Binding Filename}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   TextTrimming="CharacterEllipsis"/>
                        
                        <!-- URL -->
                        <TextBlock Text="{Binding Url}" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="300"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Status Badge -->
                <Border Grid.Column="1" 
                        Background="#FF3B82F6" 
                        CornerRadius="12" 
                        Padding="8,4"
                        Margin="0,0,12,0">
                    <TextBlock Text="{Binding StatusText}" 
                               FontSize="11" 
                               FontWeight="Medium" 
                               Foreground="White"/>
                </Border>
                
                <!-- Action Button -->
                <Button Grid.Column="2" 
                        Content="â‹¯" 
                        FontSize="16"
                        Width="32" 
                        Height="32" 
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource TextMutedBrush}"
                        ToolTip.Tip="Actions"/>
            </Grid>
            
            <!-- Progress Bar -->
            <ProgressBar Grid.Row="1" Grid.ColumnSpan="2" 
                         Value="{Binding Progress}"
                         Maximum="100"
                         Background="{DynamicResource SurfaceBaseBrush}"
                         Foreground="{DynamicResource ProgressGradientBrush}"
                         CornerRadius="6" 
                         Height="8" 
                         Margin="0,0,0,8"/>
            
            <!-- Progress Details Row -->
            <Grid Grid.Row="2" Grid.ColumnSpan="2" ColumnDefinitions="*,Auto,Auto,Auto" Margin="0,0,0,8">
                
                <!-- Progress Percentage -->
                <TextBlock Grid.Column="0" 
                           Text="{Binding ProgressText}" 
                           FontSize="12" 
                           FontWeight="Medium"
                           Foreground="{DynamicResource AccentPrimaryBrush}"/>
                
                <!-- Size Info -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding SizeText}" 
                           FontSize="12" 
                           Foreground="{DynamicResource TextMutedBrush}"
                           Margin="16,0,0,0"/>
                
                <!-- Speed -->
                <TextBlock Grid.Column="2" 
                           Text="{Binding SpeedText}" 
                           FontSize="12" 
                           Foreground="{DynamicResource TextMutedBrush}"
                           Margin="16,0,0,0"/>
                
                <!-- ETA -->
                <TextBlock Grid.Column="3" 
                           Text="{Binding EtaText}" 
                           FontSize="12" 
                           Foreground="{DynamicResource TextMutedBrush}"
                           Margin="16,0,0,0"/>
            </Grid>
            
            <!-- Error Message (if any) -->
            <Border Grid.Row="3" Grid.ColumnSpan="2"
                    Background="#33EF4444"
                    BorderBrush="#FFEF4444"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="12,8"
                    IsVisible="{Binding HasError}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="âš ï¸" FontSize="14"/>
                    <TextBlock Text="{Binding ErrorMessage}" 
                               FontSize="12" 
                               Foreground="#FFEF4444"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
            
        </Grid>
        
    </Border>

</UserControl>