<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ICNX.App.ViewModels"
             xmlns:conv="using:ICNX.App.Converters"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="ICNX.App.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid ColumnDefinitions="180,*">
        
        <!-- Settings Sidebar -->
        <Border Grid.Column="0" 
                Background="{DynamicResource SurfaceGlassBrush}" 
                BorderThickness="0,0,1,0"
                BorderBrush="{DynamicResource BorderDefaultBrush}"
                Padding="0,20">
            <StackPanel Spacing="4">
                
                <!-- General Button -->
                <Button Name="GeneralButton"
                        Width="160" Height="36"
                        Background="Transparent"
                        BorderThickness="0"
                        CornerRadius="8"
                        Margin="10,0"
                        Click="OnSettingsSidebarButtonClick"
                        Tag="0"
                        HorizontalContentAlignment="Left"
                        Padding="12,0"
                        Classes="selected">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <materialIcons:MaterialIcon Kind="Download" Width="14" Height="14" VerticalAlignment="Center"/>
                        <TextBlock Text="General" FontSize="13" FontWeight="Medium" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
                        </Style>
                        <Style Selector="Button.selected">
                            <Setter Property="Background" Value="#4D6366F1"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Styles>
                </Button>
                
                <!-- Retry Policy Button -->
                <Button Name="RetryButton"
                        Width="160" Height="36"
                        Background="Transparent"
                        BorderThickness="0"
                        CornerRadius="8"
                        Margin="10,0"
                        Click="OnSettingsSidebarButtonClick"
                        Tag="1"
                        HorizontalContentAlignment="Left"
                        Padding="12,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <materialIcons:MaterialIcon Kind="Restore" Width="14" Height="14" VerticalAlignment="Center"/>
                        <TextBlock Text="Retry Policy" FontSize="13" FontWeight="Medium" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
                        </Style>
                        <Style Selector="Button.selected">
                            <Setter Property="Background" Value="#4D6366F1"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Styles>
                </Button>
                
                <!-- Appearance Button -->
                <Button Name="AppearanceButton"
                        Width="160" Height="36"
                        Background="Transparent"
                        BorderThickness="0"
                        CornerRadius="8"
                        Margin="10,0"
                        Click="OnSettingsSidebarButtonClick"
                        Tag="2"
                        HorizontalContentAlignment="Left"
                        Padding="12,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <materialIcons:MaterialIcon Kind="FormatPaint" Width="14" Height="14" VerticalAlignment="Center"/>
                        <TextBlock Text="Appearance" FontSize="13" FontWeight="Medium" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="{DynamicResource SurfaceElevatedBrush}"/>
                        </Style>
                        <Style Selector="Button.selected">
                            <Setter Property="Background" Value="#4D6366F1"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Styles>
                </Button>
                

                
            </StackPanel>
        </Border>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Spacing="24" Margin="24">
                
                <!-- Header -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Settings" 
                              FontSize="32" 
                              FontWeight="Light"
                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Configure ICNX to your preferences" 
                              FontSize="16"
                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Status Bar -->
                <Border Background="{DynamicResource SurfaceGlassBrush}"
                        BorderBrush="{DynamicResource BorderDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16,12">
                    <Grid ColumnDefinitions="*,Auto,Auto">
                        <TextBlock Text="{Binding StatusMessage}"
                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"/>
                        
                        <Button Grid.Column="1"
                                Content="Save"
                                Command="{Binding SaveSettingsCommand}"
                                IsEnabled="{Binding HasUnsavedChanges}"
                                Background="{DynamicResource AccentPrimaryBrush}"
                                Foreground="White"
                                Padding="16,8"
                                Margin="8,0,0,0"/>
                        
                        <Button Grid.Column="2"
                                Content="Reset to Defaults"
                                Command="{Binding ResetToDefaultsCommand}"
                                Background="{DynamicResource SurfaceElevatedBrush}"
                                Foreground="{DynamicResource TextPrimaryBrush}"
                                Padding="16,8"
                                Margin="8,0,0,0"/>
                    </Grid>
                </Border>
                
                <!-- General Settings Content -->
                <StackPanel Name="GeneralContent" Spacing="20" IsVisible="{Binding IsGeneralVisible}">
                    
                    <!-- Download Directory -->
                    <Border Background="{DynamicResource SurfaceCardBrush}"
                            BorderBrush="{DynamicResource BorderDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Download Directory" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <TextBox Grid.Column="0"
                                        Text="{Binding DownloadDirectory}"
                                        Watermark="Click Browse to select download directory..."
                                        Background="{DynamicResource SurfaceCardBrush}"
                                        BorderBrush="{DynamicResource BorderDefaultBrush}"
                                        Foreground="{DynamicResource TextSecondaryBrush}"
                                        IsReadOnly="True"
                                        CaretBrush="Transparent"/>
                                
                                <Button Grid.Column="1"
                                        Command="{Binding BrowseDownloadDirectoryCommand}"
                                        Margin="8,0,0,0"
                                        Padding="12,6">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <materialIcons:MaterialIcon Kind="FolderOpen" Width="16" Height="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="Browse" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Grid.Column="2"
                                        Command="{Binding TestDownloadDirectoryCommand}"
                                        Margin="8,0,0,0"
                                        Padding="12,6">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <materialIcons:MaterialIcon Kind="TestTube" Width="16" Height="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="Test" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            
                            <TextBlock Text="Default location where downloaded files will be saved"
                                      FontSize="12"
                                      Foreground="{DynamicResource TextMutedBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Download Behavior -->
                    <Border Background="{DynamicResource SurfaceCardBrush}"
                            BorderBrush="{DynamicResource BorderDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Download Behavior" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <!-- Concurrency -->
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Column="0" Grid.Row="0"
                                          Text="Concurrent Downloads:"
                                          VerticalAlignment="Center"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Spacing="12">
                                    <Slider Value="{Binding Concurrency}"
                                           Minimum="1" Maximum="16"
                                           Width="200"
                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Concurrency}"
                                              VerticalAlignment="Center"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource AccentPrimaryBrush}"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" Grid.Row="1"
                                          Text="Number of files to download simultaneously"
                                          FontSize="12"
                                          Foreground="{DynamicResource TextMutedBrush}"
                                          Margin="0,4,0,0"/>
                            </Grid>

                            <!-- Speed Limit -->
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto">
                                <CheckBox Grid.Column="0" Grid.Row="0"
                                         Content="Speed Limit (MB/s):"
                                         IsChecked="{Binding SpeedLimitEnabled}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <TextBox Grid.Column="1" Grid.Row="0"
                                        Text="{Binding SpeedLimitText}"
                                        IsEnabled="{Binding SpeedLimitEnabled}"
                                        Watermark="No limit"
                                        Width="150"
                                        HorizontalAlignment="Left"/>
                                
                                <TextBlock Grid.Column="1" Grid.Row="1"
                                          Text="Limit download speed to conserve bandwidth"
                                          FontSize="12"
                                          Foreground="{DynamicResource TextMutedBrush}"
                                          Margin="0,4,0,0"/>
                            </Grid>

                            <!-- Auto Resume -->
                            <Grid ColumnDefinitions="200,*">
                                <CheckBox Grid.Column="0"
                                         Content="Auto-resume on launch"
                                         IsChecked="{Binding AutoResumeOnLaunch}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <TextBlock Grid.Column="1"
                                          Text="Automatically resume paused downloads when app starts"
                                          FontSize="12"
                                          Foreground="{DynamicResource TextMutedBrush}"
                                          VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Script Auto Detection -->
                            <Grid ColumnDefinitions="200,*">
                                <CheckBox Grid.Column="0"
                                         Content="Enable script detection"
                                         IsChecked="{Binding EnableScriptAutoDetection}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <TextBlock Grid.Column="1"
                                          Text="Automatically detect and extract download links using scripts"
                                          FontSize="12"
                                          Foreground="{DynamicResource TextMutedBrush}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Retry Policy Content -->
                <StackPanel Name="RetryContent" Spacing="20" IsVisible="{Binding IsRetryVisible}">
                    
                    <Border Background="{DynamicResource SurfaceCardBrush}"
                            BorderBrush="{DynamicResource BorderDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Retry Configuration" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <!-- Enable Retry -->
                            <CheckBox Content="Enable automatic retry on failures"
                                     IsChecked="{Binding RetryEnabled}"
                                     Foreground="{DynamicResource TextPrimaryBrush}"/>

                            <!-- Max Attempts -->
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto" 
                                 IsEnabled="{Binding RetryEnabled}">
                                <TextBlock Grid.Column="0" Grid.Row="0"
                                          Text="Max Retry Attempts:"
                                          VerticalAlignment="Center"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Spacing="12">
                                    <Slider Value="{Binding MaxRetryAttempts}"
                                           Minimum="0" Maximum="10"
                                           Width="200"
                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding MaxRetryAttempts}"
                                              VerticalAlignment="Center"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource AccentPrimaryBrush}"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" Grid.Row="1"
                                          Text="Number of times to retry a failed download"
                                          FontSize="12"
                                          Foreground="{DynamicResource TextMutedBrush}"
                                          Margin="0,4,0,0"/>
                            </Grid>

                            <!-- Base Delay -->
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto"
                                 IsEnabled="{Binding RetryEnabled}">
                                <TextBlock Grid.Column="0" Grid.Row="0"
                                          Text="Base Delay (ms):"
                                          VerticalAlignment="Center"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Spacing="12">
                                    <Slider Value="{Binding BaseRetryDelayMs}"
                                           Minimum="100" Maximum="10000"
                                           Width="200"
                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding BaseRetryDelayMs}"
                                              VerticalAlignment="Center"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource AccentPrimaryBrush}"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" Grid.Row="1"
                                          Text="Initial delay before first retry attempt"
                                          FontSize="12"
                                          Foreground="{DynamicResource TextMutedBrush}"
                                          Margin="0,4,0,0"/>
                            </Grid>

                            <!-- Backoff Factor -->
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto"
                                 IsEnabled="{Binding RetryEnabled}">
                                <TextBlock Grid.Column="0" Grid.Row="0"
                                          Text="Backoff Factor:"
                                          VerticalAlignment="Center"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Spacing="12">
                                    <Slider Value="{Binding BackoffFactor}"
                                           Minimum="1.0" Maximum="5.0"
                                           Width="200"
                                           VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding BackoffFactor, StringFormat='{}{0:F1}'}"
                                              VerticalAlignment="Center"
                                              FontWeight="SemiBold"
                                              Foreground="{DynamicResource AccentPrimaryBrush}"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" Grid.Row="1"
                                          Text="Multiplier for exponential backoff delay"
                                          FontSize="12"
                                          Foreground="{DynamicResource TextMutedBrush}"
                                          Margin="0,4,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Appearance Content -->
                <StackPanel Name="AppearanceContent" Spacing="20" IsVisible="{Binding IsAppearanceVisible}">
                    
                    <Border Background="{DynamicResource SurfaceCardBrush}"
                            BorderBrush="{DynamicResource BorderDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Visual Settings" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <!-- Theme Selection with Previews -->
                            <StackPanel Spacing="12">
                                <TextBlock Text="Theme" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <Grid ColumnDefinitions="150,*">
                                    <TextBlock Grid.Column="0"
                                              Text="Theme Mode:"
                                              VerticalAlignment="Center"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    
                                    <ComboBox Grid.Column="1"
                                             ItemsSource="{Binding AvailableThemes}"
                                             SelectedItem="{Binding SelectedTheme}"
                                             Width="200"
                                             HorizontalAlignment="Left"/>
                                </Grid>
                                
                                <!-- Theme Preview Cards -->
                                <WrapPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <!-- Dark Theme Preview -->
                                    <Button Background="#FF1A1A2E" 
                                            BorderBrush="{DynamicResource BorderDefaultBrush}"
                                            BorderThickness="2"
                                            CornerRadius="8"
                                            Width="120" Height="80"
                                            Margin="0,0,8,8"
                                            Command="{Binding SelectThemeCommand}"
                                            CommandParameter="Dark"
                                            Cursor="Hand">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="BorderBrush" Value="{DynamicResource AccentPrimaryBrush}"/>
                                            </Style>
                                        </Button.Styles>
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Border Background="#FF3B82F6" Width="40" Height="8" CornerRadius="4" Margin="0,0,0,4"/>
                                            <Border Background="#FF2A2D3A" Width="50" Height="6" CornerRadius="3" Margin="0,0,0,4"/>
                                            <Border Background="#FF2A2D3A" Width="35" Height="6" CornerRadius="3"/>
                                            <TextBlock Text="Dark" FontSize="10" Foreground="White" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Light Theme Preview -->
                                    <Button Background="#FFFFFFFF" 
                                            BorderBrush="{DynamicResource BorderDefaultBrush}"
                                            BorderThickness="2"
                                            CornerRadius="8"
                                            Width="120" Height="80"
                                            Margin="0,0,8,8"
                                            Command="{Binding SelectThemeCommand}"
                                            CommandParameter="Light"
                                            Cursor="Hand">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="BorderBrush" Value="{DynamicResource AccentPrimaryBrush}"/>
                                            </Style>
                                        </Button.Styles>
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Border Background="#FF3B82F6" Width="40" Height="8" CornerRadius="4" Margin="0,0,0,4"/>
                                            <Border Background="#FFE2E8F0" Width="50" Height="6" CornerRadius="3" Margin="0,0,0,4"/>
                                            <Border Background="#FFE2E8F0" Width="35" Height="6" CornerRadius="3"/>
                                            <TextBlock Text="Light" FontSize="10" Foreground="Black" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- High Contrast Theme Preview -->
                                    <Button Background="#FF000000" 
                                            BorderBrush="{DynamicResource BorderDefaultBrush}"
                                            BorderThickness="2"
                                            CornerRadius="8"
                                            Width="120" Height="80"
                                            Margin="0,0,8,8"
                                            Command="{Binding SelectThemeCommand}"
                                            CommandParameter="HighContrast"
                                            Cursor="Hand">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="BorderBrush" Value="#FFFFFF00"/>
                                            </Style>
                                        </Button.Styles>
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Border Background="#FFFFFF00" Width="40" Height="8" CornerRadius="4" Margin="0,0,0,4"/>
                                            <Border Background="#FFFFFFFF" Width="50" Height="6" CornerRadius="3" Margin="0,0,0,4"/>
                                            <Border Background="#FFFFFFFF" Width="35" Height="6" CornerRadius="3"/>
                                            <TextBlock Text="High Contrast" FontSize="10" Foreground="White" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Button>
                                </WrapPanel>
                            </StackPanel>

                            <!-- Accent Color -->
                            <StackPanel Spacing="12">
                                <TextBlock Text="Accent Color" 
                                          FontSize="16" 
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto">
                                    <TextBlock Grid.Column="0" Grid.Row="0"
                                              Text="Current Color:"
                                              VerticalAlignment="Center"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    
                                    <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Spacing="8">
                                        <TextBox Text="{Binding AccentColor}"
                                                Width="120"
                                                Watermark="#3b82f6"/>
                                        
                                        <Border Width="32" Height="32"
                                               Background="{Binding AccentColor}"
                                               CornerRadius="6"
                                               BorderBrush="{DynamicResource BorderDefaultBrush}"
                                               BorderThickness="2"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="0" Grid.Row="1"
                                              Text="Presets:"
                                              VerticalAlignment="Top"
                                              Margin="0,12,0,0"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    
                                    <ItemsControl Grid.Column="1" Grid.Row="1" 
                                                 ItemsSource="{Binding PredefinedColors}"
                                                 Margin="0,12,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Width="32" Height="32"
                                                       Background="{Binding}"
                                                       CornerRadius="6"
                                                       BorderBrush="{DynamicResource BorderDefaultBrush}"
                                                       BorderThickness="2"
                                                       Margin="0,0,6,6"
                                                       Command="{Binding $parent[UserControl].DataContext.SelectColorCommand}"
                                                       CommandParameter="{Binding}"
                                                       ToolTip.Tip="{Binding}">
                                                    <Button.Styles>
                                                        <Style Selector="Button:pointerover">
                                                            <Setter Property="BorderBrush" Value="White"/>
                                                            <Setter Property="BorderThickness" Value="3"/>
                                                        </Style>
                                                    </Button.Styles>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </StackPanel>

                            <!-- Visual Effects -->
                            <StackPanel Spacing="12">
                                <TextBlock Text="Visual Effects"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <CheckBox Content="Enable animations"
                                         IsChecked="{Binding EnableAnimations}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <CheckBox Content="Enable glass effects"
                                         IsChecked="{Binding EnableGlass}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <CheckBox Content="Enable progress effects"
                                         IsChecked="{Binding EnableProgressEffects}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <CheckBox Content="Compact mode"
                                         IsChecked="{Binding CompactMode}"
                                         Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>


                
            </StackPanel>
        </ScrollViewer>

    </Grid>

</UserControl>